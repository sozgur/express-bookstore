{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire JSON document.",
    "default": {},
    "examples": [
        {
            "amazon_url": "https://www.amazon.com/example-book-url",
            "author": "sumeyra ozgur",
            "language": "English",
            "pages": 138,
            "publisher": "MIT Press",
            "title": "Stay Curious",
            "year": 2020
        }
    ],
    "required": [
        "amazon_url",
        "author",
        "language",
        "pages",
        "publisher",
        "title",
        "year"
    ],
    "properties": {
        "amazon_url": {
            "$id": "#/properties/amazon_url",
            "type": "string",
            "title": "The amazon_url schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": ["https://www.amazon.com/example-book-url"]
        },
        "author": {
            "$id": "#/properties/author",
            "type": "string",
            "title": "The author schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": ["sumeyra ozgur"]
        },
        "language": {
            "$id": "#/properties/language",
            "type": "string",
            "title": "The language schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": ["English"]
        },
        "pages": {
            "$id": "#/properties/pages",
            "type": "integer",
            "title": "The pages schema",
            "description": "An explanation about the purpose of this instance.",
            "default": 0,
            "examples": [138]
        },
        "publisher": {
            "$id": "#/properties/publisher",
            "type": "string",
            "title": "The publisher schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": ["MIT Press"]
        },
        "title": {
            "$id": "#/properties/title",
            "type": "string",
            "title": "The title schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": ["Stay Curious"]
        },
        "year": {
            "$id": "#/properties/year",
            "type": "integer",
            "title": "The year schema",
            "description": "An explanation about the purpose of this instance.",
            "default": 0,
            "examples": [2020],
            "pattern": "^d{4}$"
        }
    },
    "additionalProperties": true
}
